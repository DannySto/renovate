{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "^\\\\s*FROM\\\\s+(?<depName>python):(?<currentValue>.*?)-slim-bookworm@sha256:[a-z0-9]+"
      ],
      "datasourceTemplate": "docker",
      "currentValueTemplate": "{{currentValue}}"
    }
  ]
}
