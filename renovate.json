{
  "extends": ["config:base"],
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": [
        "ARG PYTHON_VERSION=(?<currentValue>\\d+\\.\\d+)"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchDepNames": ["python"],
      "groupName": "python updates"
    },
    {
      "matchDepNames": ["python"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ],
  "docker": {
    "enabled": true
  }
}
